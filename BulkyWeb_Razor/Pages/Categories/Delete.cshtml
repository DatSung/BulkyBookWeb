@page
@model BulkyWeb_Razor.Pages.Categories.DeleteModel
@{
}



<form method="post">
	<input asp-for="Category.CategoryId" hidden></input>
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Category</h2>
			<hr />
			@* <div asp-validation-summary="All"></div> *@
		</div>
		<div class="mb-3 row">
			<label asp-for="Category.CategoryName"></label>
			<input asp-for="Category.CategoryName" type="text" class="form-control"></input>
			<span asp-validation-for="Category.CategoryName" class="text-danger"></span>
		</div>
		<div class="mb-3 row">
			<label asp-for="Category.CategoryDisplayOrder"></label>
			<input asp-for="Category.CategoryDisplayOrder" type="text" class="form-control"></input>
			<span asp-validation-for="Category.CategoryDisplayOrder" class="text-danger"></span>
		</div>

		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary form-control">Delete</button>

			</div>
			<div class="col-6 col-md-3">
				<a asp-page="/Categories/Index" class="btn btn-outline-secondary border form-control">Back to List</a>
			</div>
		</div>

	</div>
</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}