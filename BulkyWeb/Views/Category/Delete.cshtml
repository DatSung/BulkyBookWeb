
@{
    ViewData["Title"] = "Delete";
}

@model Category

<form method="post">
	<input asp-for="CategoryId" hidden></input>
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Category</h2>
			<hr />
		</div>
		<div class="mb-3 row">
			<label asp-for="CategoryName"></label>
			<input asp-for="CategoryName" type="text" class="form-control" disabled></input>
		</div>
		<div class="mb-3 row">
			<label asp-for="CategoryDisplayOrder"></label>
			<input asp-for="CategoryDisplayOrder" type="text" class="form-control" disabled></input>
		</div>

		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary form-control">Delete</button>

			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control">Back to List</a>
			</div>
		</div>

	</div>
</form>


