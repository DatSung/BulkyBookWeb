@{
	ViewData["Title"] = "Category";
}

@model List<Category>

<div class="container">
	<div class="row pt-4 pd-3">
		<div class="col-6">
			<h2 class="text-primary">
				Category List
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Category" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-lg"></i> Create New Category
			</a>
		</div>
	</div>


	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>
					Catergory name
				</th>
				<th>
					Display Order
				</th>
			</tr>
		</thead>

		<tbody>
			@foreach (var obj in Model.OrderBy(u => u.CategoryDisplayOrder))
			{
				<tr>
					<td>@obj.CategoryName</td>
					<td>@obj.CategoryDisplayOrder</td>
				</tr>
			}
		</tbody>
	</table>
</div>